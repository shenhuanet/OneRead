<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/colorBlackOverlay</item>
    </style>

    <style name="ItemLayoutStyle">
        <item name="android:background">@color/colorOverlay10</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_layout_height</item>
        <item name="android:layout_marginTop">@dimen/item_layout_margin_top</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/item_layout_padding</item>
        <item name="android:paddingRight">@dimen/item_layout_padding</item>
    </style>

    <style name="ItemLayoutTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CircleItemStyle">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="CircleItemStyle.Start">
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>

    <style name="CircleItemStyle.Center">
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="CircleItemStyle.End">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="LoginEditStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/et_selector</item>
        <item name="android:drawableRight">@drawable/ic_delete_white</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

</resources>
